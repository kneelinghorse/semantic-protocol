  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/semantic-protocol/semantic-protocol"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "bugs": {
    "url": "https://github.com/semantic-protocol/semantic-protocol/issues"
  },
  "homepage": "https://github.com/semantic-protocol/semantic-protocol#readme",
