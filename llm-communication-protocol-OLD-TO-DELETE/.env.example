# LLM Communication Protocol - Environment Variables
# Copy this file to .env and add your actual API keys

# Anthropic Claude API
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI GPT API
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (optional)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Protocol Configuration (optional)
# Maximum rounds per conversation
MAX_ROUNDS=10

# Convergence threshold (0.0 to 1.0)
# Higher values require stronger consensus
CONVERGENCE_THRESHOLD=0.85

# Semantic preservation threshold (0.0 to 1.0)
# Below this value triggers a warning
SEMANTIC_THRESHOLD=0.70

# Timeout per round in milliseconds
TIMEOUT_PER_ROUND=60000

# Enable detailed logging
ENABLE_LOGGING=true

# LLM Model Selection (optional)
# Specify which models to use
CLAUDE_MODEL=claude-3-opus-20240229
GPT_MODEL=gpt-4-turbo-preview
GEMINI_MODEL=gemini-pro

# Rate Limiting (optional)
# Requests per minute for each LLM
CLAUDE_RPM=10
GPT_RPM=10
GEMINI_RPM=10

# Retry Configuration (optional)
MAX_RETRIES=3
RETRY_DELAY=1000

# Export Settings (optional)
# Directory for saving conversation exports
EXPORT_DIR=./exports

# Format for automatic exports (json, markdown, both)
EXPORT_FORMAT=json